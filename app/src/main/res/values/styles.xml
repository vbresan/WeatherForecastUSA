<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewWeatherBoxTitleStyle">
        <item name="android:layout_width">@dimen/WeatherBoxWidth</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_day</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/TextColorWeatherBoxTitle</item>
    </style>
    <style name="TextViewWeatherBoxItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/TextColorWeatherBox</item>
    </style>
    <style name="TextViewWeatherBoxMessageStyle" parent="TextViewWeatherBoxItemStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="LinearLayoutWeatherBoxStyle">
        <item name="android:layout_width">@dimen/WeatherBoxWidth</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/weather_box</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="LinearLayoutWeatherBoxItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ImageViewWeatherIconStyle">
        <item name="android:layout_width">57dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">2dip</item>
    </style>
</resources>
